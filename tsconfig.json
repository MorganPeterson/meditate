{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "module": "NodeNext",
        "moduleResolution": "node",
        "target": "es2015",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "src/__test__"
    ]
}
